# ================================================
# ARCHIVO DE CONFIGURACIÓN DE EJEMPLO
# Copia este archivo a .env y actualiza los valores
# ================================================

# ================================================
# BASE DE DATOS
# ================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=app_tareas
DB_CHARSET=utf8mb4

# ================================================
# APLICACIÓN
# ================================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/tareas
APP_NAME="Gestor de Tareas"

# ================================================
# SEGURIDAD
# ================================================
JWT_SECRET=tu_clave_super_secreta_aqui_2025_cambiar_en_produccion
SESSION_TIMEOUT=3600
CSRF_TOKEN_LENGTH=32
PASSWORD_MIN_LENGTH=8

# ================================================
# APIs EXTERNAS
# ================================================
WEATHER_API_KEY=tu_api_key_de_openweathermap_aqui
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather
NOMINATIM_API_URL=https://nominatim.openstreetmap.org/search

# ================================================
# RUTAS
# ================================================
WEB_ROOT=http://localhost/tareas
API_BASE_URL=http://localhost/tareas/api

# ================================================
# LOGGING
# ================================================
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_QUERIES=false

# ================================================
# EMAIL (Opcional para notificaciones)
# ================================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_contraseña_app
MAIL_FROM=noreply@example.com

# ================================================
# CACHE
# ================================================
CACHE_DRIVER=file
CACHE_TTL=3600

# ================================================
# CORS
# ================================================
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:80
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ================================================
# ARCHIVOS
# ================================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# ================================================
# BACKUP
# ================================================
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_FREQUENCY=daily

# ================================================
# RATE LIMITING
# ================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ================================================
# NOTAS PARA PRODUCCIÓN
# ================================================
# 1. Cambiar APP_ENV a "production"
# 2. Cambiar APP_DEBUG a "false"
# 3. Generar nuevo JWT_SECRET seguro
# 4. Usar HTTPS en APP_URL
# 5. Configurar variables de BD seguras
# 6. Obtener API key real de OpenWeather
# 7. Configurar email SMTP válido
# 8. Habilitar logging de errores
# 9. Configurar backup automático
# 10. Activar rate limiting
